<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-36dp"
        android:background="#C64F78"
        android:clickable="true">

        <ImageButton
            android:id="@+id/messagePlay2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/orange"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/likedAlbumCover"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="TODO"
            tools:srcCompat="@drawable/tame_impala" />

        <TextView
            android:id="@+id/likedTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/likedAlbumCover"
            android:fontFamily="@font/alata"
            android:text="@string/textview"
            android:textColor="#E6DFDF"
            android:textSize="16sp"
            tools:text="Is It True" />

        <TextView
            android:id="@+id/outgoingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/likedAlbumCover"
            android:fontFamily="@font/alata"
            android:text="TextView"
            android:textColor="#E6DFDF"
            android:textSize="16sp"
            tools:text="Tame Impala" />

        <ImageButton
            android:id="@+id/messageAdd"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/purple_500"
            app:srcCompat="@drawable/ic_baseline_playlist_add_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
